name: GitHub Actions Demo
on: [push]
jobs:
  Explore-GitHub-Actions:
    runs-on: ubuntu-latest
    steps:
      - run: echo "🎉 The jjob was automatically triggered by a ${{ github.event_name }} event."
      - run: echo "🐧 This job is now running on a ${{ runner.os }} server hosted by GitHub!"
      - run: echo "🔎 The name of your branch is ${{ github.ref }} and your repository is ${{ github.repository }}."
      - name: Check out repository code
        uses: actions/checkout@v2
      - run: echo "💡 The ${{ github.repository }} repository has been cloned to the runner."
      - run: echo "🖥️ The workflow is now ready to test your code on the runner."
      
      - name: HTTP Request Action
        uses: fjogeleit/http-request-action@v1.8.1
        url: 'http://automssql001.westeurope.cloudapp.azure.com:9001/api/v3/schedules/d41f169d-88d5-442e-b8ba-9afe9dc01c3a/runNow?TEST_VALUE='ABC''
        method: 'POST'
        customHeaders: "AccessKey","xxQ4US96Ew1pfGHe"
      - name: List files in the repository
        run: |
          ls ${{ github.workspace }}
      - run: echo "🍏 This job's status is ${{ job.status }}."
